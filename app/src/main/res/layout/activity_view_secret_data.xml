<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screenPadding"
    tools:context=".activities.secretData.ViewSecretDataActivity">

    <TextView
        android:id="@+id/text_title_view_data"
        style="@style/Theme.DataSafe.TitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_data_view_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/roboto_bold"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="@string/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_view_data"
            style="@style/Theme.DataSafe.ButtonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/go_back" />

        <Button
            android:id="@+id/btn_view_hide_view_data"
            style="@style/Theme.DataSafe.ButtonPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/view" />
    </LinearLayout>

</LinearLayout>